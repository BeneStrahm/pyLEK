# Top-level metadata/config
include README.md
include LICENSE
include pyproject.toml
include setup.cfg

# Type hints (if present)
include pyLEK/py.typed
recursive-include pyLEK *.pyi

# Package data (common non-code assets)
recursive-include pyLEK *.json *.csv *.txt *.md *.yml *.yaml *.ini *.cfg *.npz *.npy

recursive-include pyLEK *.mplstyle
recursive-include pyLEK *.md
recursive-include pyLEK *.mustache

# Exclusions
global-exclude *.py[cod] __pycache__ *.so *.dylib .DS_Store Thumbs.db

# Do not ship development folders
prune tests
prune docs
prune examples
